<div class='record_show_page'>

  <h1><%= @record.title %></h1>
  
  <%= render partial: 'record', locals: { record: @record } %>



  <% if @record.record_type?  %>
    <div>Record type:<%= @record.record_type %></div>
  <% end %>

  <% if @machine.present?  %>
    <div>Machine id:<%= @machine.id %></div>
  <% end %>


  <% if @users.present?  %>
    Recorders names:
    <% @users.each do |user| %>
      <%= user.name %>
    <% end %>
  <% else %>
    <p>No recorders' names.</p>
  <% end %>


  <div class='flex-box flex-wrap'>
    <% @record&.images&.each do |image| %>
      <div><%= image_tag image , :class => "record_img_thumbnail"%></div>
    <% end %>
  </div>

  <% if @record.content.present?  %>
    <div><%= @record.content %></div>
  <% end %>

  
  <%#= @record.user.present? ? 
    "User name: #{record.user.name}" :
    "<p>No recorder's name</p>".html_safe %>


  <div>
    <%= button_to 'Edit' , edit_record_path(@record), method: :get, class: "button-blue" %>
    <%= link_to "delete", @record,
      data: { "turbo-method": :delete,turbo_confirm: "You sure?" },
      class:'red-2' %>
  </div>

  <%= link_to 'Back to records page', records_path%>

</div>
